<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="listener.Person">
        <property name="name" value="personOne"/>
    </bean>

    <!--<bean id="listener" class="listener.MyContextRefreshedEventListener"/>-->

    <bean id="applicationListener" class="listener.MyApplicationListener"/>

    <bean id="initBean" class="listener.MyInitBean" init-method="initMethod">
        <property name="initField" value="real_init_field"/>

    </bean>

    <bean id="teacher" class="listener.Teacher" lazy-init="true">
        <property name="name" value="teacherOne"/>
    </bean>


    <bean id="student" class="listener.Student">
        <property name="name" value="student1"/>
    </bean>



</beans>